<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_for_blog"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/list_item_comment_author_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Автор"/>
    <TextView
        android:id="@+id/list_item_comment_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_comment_author_text_view"

        android:textStyle="italic"
        android:textSize="10dp"
        android:padding="4dp"
        tools:text="Дата написания комментария"/>
    <TextView
        android:id="@+id/list_item_comment_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/list_item_comment_date_text_view"
        android:padding="4dp"
        tools:text="Комментарий"/>

    <ImageView
        android:id="@+id/delete_comm"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageView
        android:id="@+id/edit_comm"
        android:layout_width="44dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        app:srcCompat="@drawable/baseline_edit_24" />


</RelativeLayout>