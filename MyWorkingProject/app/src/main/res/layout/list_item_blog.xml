<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_for_blog"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_blog_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Тема блога"/>
    <TextView
        android:id="@+id/list_item_blog_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/list_item_blog_title_text_view"
        android:padding="4dp"
        tools:text="Дата написания блога"/>

    <TextView
        android:id="@+id/list_item_blog_author_text_view"
        android:layout_width="89dp"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:text="TextView" />
</RelativeLayout>